    "src/"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docs": "bin/docs.sh",
    "prebuild": "rimraf dist && rimraf docs",
    "build": "bin/build.sh",
    "start": "rollup -c rollup.config.ts -w",
