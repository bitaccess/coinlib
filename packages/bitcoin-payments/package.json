  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "types": "dist/lib/index.d.ts",
  "esnext": "dist/lib/index.js",
  "repository": "https://github.com/go-faast/coin-payments/tree/master/packages/bitcoin-payments",
